{
  "packages": [
    "packages/*"
  ],
  "version": "1.2.1-beta.3",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": [
        "master",
        "release/*",
        "hotfix/*"
      ]
    },
    "version": {
      "message": "chore: publish %s [ci skip]",
      "ignoreChanges": [
        "examples/**"
      ]
    }
  }
}
