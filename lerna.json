{
  "packages": ["packages/*"],
  "version": "1.1.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "release/*", "hotfix/*"]
    },
    "version": {
      "message": "chore: publish %s [ci skip]",
      "ignoreChanges": ["examples/**"]
    }
  }
}
