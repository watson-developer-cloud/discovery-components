{
  "packages": [
    "packages/*"
  ],
  "version": "3.1.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": [
        "master"
      ]
    },
    "version": {
      "message": "chore: publish %s [ci skip]",
      "ignoreChanges": [
        "examples/**"
      ]
    }
  }
}
