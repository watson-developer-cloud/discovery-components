{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["develop", "release/*", "hotfix/*"]
    },
    "version": {
      "message": "chore: publish to NPM [ci skip]",
      "ignoreChanges": ["examples/**"]
    }
  }
}
