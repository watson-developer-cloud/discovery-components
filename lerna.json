{
  "packages": ["packages/*"],
  "version": "5.0.3",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"]
    },
    "version": {
      "message": "chore: publish %s [ci skip]",
      "ignoreChanges": ["examples/**"]
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
